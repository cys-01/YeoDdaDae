<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/toFindParkImgBtn"
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@color/main"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/myYdPointTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="0"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/toFindParkImgBtn"
        app:layout_constraintEnd_toEndOf="@+id/toFindParkImgBtn"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/toFindParkImgBtn"
        app:layout_constraintTop_toTopOf="@+id/toFindParkImgBtn" />

    <TextView
        android:text="pt"
        android:textColor="@color/sub"
        android:textStyle="italic"
        android:textSize="45sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/myYdPointTxt"
        app:layout_constraintTop_toTopOf="@+id/myYdPointTxt"
        app:layout_constraintBottom_toBottomOf="@+id/myYdPointTxt"
        android:layout_marginLeft="5dp"/>

    <ImageButton
        android:id="@+id/toChargeYdPointBtn"
        android:layout_width="390dp"
        android:layout_height="160dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_button"
        android:text="여따대포인트 충전"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toFindParkImgBtn" />

    <ImageView
        android:id="@+id/toChargeYdPointImg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/toChargeYdPointBtn"
        app:layout_constraintStart_toStartOf="@+id/toChargeYdPointBtn"
        app:layout_constraintTop_toTopOf="@+id/toChargeYdPointBtn"
        app:srcCompat="@drawable/charge_ydpoint" />

    <TextView
        android:id="@+id/toChargeYdPointTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="여따대포인트 충전"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/toChargeYdPointBtn"
        app:layout_constraintStart_toEndOf="@+id/toRefundYdPointImg"
        app:layout_constraintTop_toTopOf="@+id/toChargeYdPointBtn" />

    <ImageButton
        android:id="@+id/toRefundYdPointBtn"
        android:layout_width="390dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_button"
        app:layout_constraintTop_toBottomOf="@+id/toChargeYdPointBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/toRefundYdPointImg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/toRefundYdPointBtn"
        app:layout_constraintStart_toStartOf="@+id/toRefundYdPointBtn"
        app:layout_constraintTop_toTopOf="@+id/toRefundYdPointBtn"
        app:srcCompat="@drawable/refund_ydpoint" />

    <TextView
        android:id="@+id/toRefundYdPointTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:text="포인트 환급"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/toRefundYdPointBtn"
        app:layout_constraintStart_toEndOf="@+id/toRefundYdPointImg"
        app:layout_constraintTop_toTopOf="@+id/toRefundYdPointBtn" />




</androidx.constraintlayout.widget.ConstraintLayout>