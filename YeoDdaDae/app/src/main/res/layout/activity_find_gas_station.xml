<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindGasStationActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/linearLayoutTmap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ListView
                android:id="@+id/gasStationListView"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            
            <HorizontalScrollView
                android:id="@+id/gasStationSortHorizontalScrollView"
                android:scrollbars="none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/gasStationListView"
                app:layout_constraintLeft_toLeftOf="parent" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/sortByDistanceBtn"
                        android:text="거리순"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/sortByRateBtn"
                        android:text="평점순"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"/>

                    <Button
                        android:id="@+id/sortByGasolinePriceBtn"
                        android:text="휘발유가순"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp" />

                    <Button
                        android:id="@+id/sortByDieselPriceBtn"
                        android:text="경유가순"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp" />

                    <Button
                        android:id="@+id/sortByHighGasolinePriceBtn"
                        android:text="고급휘발유가순"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp" />

                    <Button
                        android:id="@+id/sortByHighDieselPriceBtn"
                        android:text="고급경유가순"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>
            </HorizontalScrollView>
            <Button
                android:id="@+id/cancelNaviBtn"
                android:text="뒤로가기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/gasStationListView"
                app:layout_constraintLeft_toLeftOf="@id/gasStationListView"
                android:visibility="gone"/>

            <Button
                android:id="@+id/toStartNaviBtn"
                android:text="네비게이션시작"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/gasStationListView"
                app:layout_constraintRight_toRightOf="@id/gasStationListView"
                android:visibility="gone"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="bottom|left" >

            <ImageButton
                android:id="@+id/zoomOutBtn"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:background="@drawable/round_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/zoomOutTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="50dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/zoomOutBtn"
                app:layout_constraintStart_toStartOf="@+id/zoomOutBtn"
                app:layout_constraintTop_toTopOf="@+id/zoomOutBtn" />

            <ImageButton
                android:id="@+id/zoomInBtn"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_button"
                app:layout_constraintBottom_toTopOf="@id/zoomOutBtn"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/zoomInTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="30dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/zoomOutBtn"
                app:layout_constraintEnd_toEndOf="@+id/zoomInBtn"
                app:layout_constraintStart_toStartOf="@+id/zoomInBtn"
                app:layout_constraintTop_toTopOf="@+id/zoomInBtn" />

            <ImageButton
                android:id="@+id/gpsBtn"
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:background="@drawable/round_button"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toTopOf="@id/zoomInBtn"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/gpsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="GPS"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/gpsBtn"
                app:layout_constraintEnd_toEndOf="@+id/gpsBtn"
                app:layout_constraintStart_toStartOf="@+id/gpsBtn"
                app:layout_constraintTop_toTopOf="@+id/gpsBtn" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center|right" >

            <ImageButton
                android:id="@+id/findGasStationBackBtn"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/backbtn"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>