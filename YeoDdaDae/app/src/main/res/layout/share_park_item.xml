<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <TextView
        android:id="@+id/shareParkLocationTxt"
        android:text="위치"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/shareParkShareTimeTxt"
        android:text="공유시간"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/shareParkLocationTxt"
        app:layout_constraintBottom_toTopOf="@+id/shareParkPriceTxt"
        app:layout_constraintLeft_toLeftOf="@+id/shareParkLocationTxt"/>

    <TextView
        android:id="@+id/shareParkIsCancelledTxt"
        android:text="취소됨"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/shareParkLocationTxt"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/shareParkPriceTxt"
        android:text="가격"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/shareParkUpTimeTxt"
        app:layout_constraintRight_toRightOf="@+id/shareParkUpTimeTxt" />

    <TextView
        android:id="@+id/shareParkUpTimeTxt"
        android:text="시각"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>